<h1> <%= @course.name %> </h1>

<% @course.students.sorted_students.each_with_index do |student, index| %>
  <section id="student-<%= index %>">
    <p> <%= student.name %> - <%= student.student_grade(@course.id) %> </p>
    <p><%= link_to 'Unenroll', "/students/#{student.id}", method: :delete %></p>
  </section>
<% end %>
